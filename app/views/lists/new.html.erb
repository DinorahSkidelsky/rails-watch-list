<div class="container py-5">
  <div class="row">
    <div class="col">
      <%= image_tag("https://c1.wallpaperflare.com/preview/892/839/660/ciack-direction-director-film.jpg", width: 750) %>
    </div>
    <div class="col py-5">
      <div class="d-flex justify-content-center my-4">
        <h1 class="letter d-flex justify-content-center">New List</h1>
      </div>
      <div class="letter d-flex justify-content-center my-3">
        <%= simple_form_for(@list) do |f| %>
          <%= f.input :name %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <div class="d-flex justify-content-center"><%= f.submit "Save", class: "btn btn-warning my-3" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
