<div class="banner">
   <% @list.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
</div>
<h2 class="d-flex justify-content-center text-light my-5"><%= @list.name %></h2>
<div class="container">
  <div class="cards">
    <ul class="list-group">
      <% @list.movies.each do |movie| %>
        <div class="list-group-item">
          <li class="d-flex justify-content-center"><%= movie.title %></li>
          <li class="d-flex justify-content-center"><%= movie.overview %></li>
          <li class="d-flex justify-content-center"><%= movie.poster_url %></li>
          <li class="d-flex justify-content-center"><%= movie.rating %></li>
        </div>
      <% end %>
    </ul>
  </div>
  <div class="container">
  <div class="cards">
    <ul class="list-group">


      <% @list.bookmarks.each do |bookmark| %>
        <li class="list-group-item d-flex justify-content-center">
          <%= bookmark.comment %>
          <%= bookmark.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>

          <div class="d-flex justify-content-center">
            <%= link_to "Delete",
              bookmark_path(bookmark),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  </div>
  <p class="d-flex justify-content-end"><%= link_to 'Add a new bookmark', new_list_bookmark_path(@list) , class: "btn btn-warning"%></p>
</div>
