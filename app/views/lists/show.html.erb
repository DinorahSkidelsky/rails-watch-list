<h2 class="d-flex justify-content-center">List name:</h2>
<h3 class="d-flex justify-content-center"><%= @list.name %></h3>

<ul class="list-group">
  <% @list.movies.each do |movie| %>
    <div class="list-group-item">
      <li class="d-flex justify-content-center">TITLE:<%= movie.title %></li>
      <li class="d-flex justify-content-center">OVERVIEW:<%= movie.overview %></li>
      <li class="d-flex justify-content-center">URL:<%= movie.poster_url %></li>
      <li class="d-flex justify-content-center">RATING:<%= movie.rating %></li>
    </div>
  <% end %>
</ul>
<br>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item d-flex justify-content-center">
    <%= bookmark.comment %>
      <div class="d-flex justify-content-center">
        <%= link_to "Delete",
          bookmark_path(bookmark),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        </div>
      </li>
  <% end %>
</ul>
<br>
<p class="d-flex justify-content-center"><%= link_to 'Add a new bookmark', new_list_bookmark_path(@list) , class: "btn btn-primary"%></p>
<br>
<p class="d-flex justify-content-center"><%= link_to "Back to list", root_path , class: "btn btn-primary"%></p>
